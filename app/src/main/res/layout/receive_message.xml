<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoom">

    <TextView
        android:id="@+id/messageView"
        android:layout_width="242dp"
        android:layout_height="85dp"
        android:layout_marginBottom="804dp"
        android:text="Message goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/receive_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/timeView" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="868dp"
        android:text="Time goes here"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/receive_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="836dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/receive_message"
        tools:layout_editor_absoluteX="361dp" />
</androidx.constraintlayout.widget.ConstraintLayout>